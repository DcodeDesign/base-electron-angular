{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "publish": [
    {
      "provider": "github",
      "url": "https://github.com/DcodeDesign/base-electron-angular",
      "token": "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"
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": [
        "**/*"
      ]
    }
  ],

  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "oneClick": false
  },

  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },

  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  },
  "afterPack": "./app/after-builder.js"
}

