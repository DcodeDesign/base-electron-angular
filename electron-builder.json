{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "publish": [
    {
      "provider": "github",
      "repo": "base-electron-angular",
      "host": "github.com",
      "protocol": "https",
      "releaseType": "draft",
      "owner": "DcodeDesign",
      "private": false
    }
  ],
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": [
        "**/*"
      ]
    }
  ],

  "win": {
    "icon": "dist/assets/icons",
    "publish": [
      "github"
    ],
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "allowToChangeInstallationDirectory": true,
    "oneClick": false
  },

  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },

  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  },
  "afterPack": "./app/after-builder.js"
}

